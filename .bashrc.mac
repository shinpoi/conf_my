### Common
if [ "$TERM" = xterm ]; then TERM=xterm-256color; fi
alias vi='vim'
alias rm='rm -r'
alias grep='grep --color=auto'
export CLICOLOR=1

alias ls='ls -G'
alias ll='ls -lhG'
alias la='ls -AG'
PS1='\[\033[1;92m\]\u@\h\[\033[00m\]:\[\033[1;38;5;117m\]\w\[\033[00m\]\$ '
export LSCOLORS=GxexFxfxcxDxdxCxChacad

